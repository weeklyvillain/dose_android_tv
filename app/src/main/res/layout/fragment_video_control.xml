<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".controls.VideoControlFragment">

    <ImageButton
        android:id="@+id/subtitleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/exo_ic_subtitle_on" />

    <ImageButton
        android:id="@+id/resolutionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/iq_resolution" />

    <ImageButton
        android:id="@+id/audioButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/exo_styled_controls_audiotrack" />


</LinearLayout>



